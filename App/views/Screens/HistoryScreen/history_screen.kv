#:import get_color_from_hex kivy.utils.get_color_from_hex

<HistoryScreen>

    name: "history_screen"

    MDBoxLayout:
        orientation: 'vertical'

        TopSearchBar:

        ScrollView:
            id: scroll_banner

            GridLayout:
                id: grid_banner
                cols: 1
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 80
                orientation: 'bt-lr'

<HistoryCard>
    padding: 10
    height: 200
    radius: 7
    elevation: 1
    #ripple_behavior: True

    MDRelativeLayout:
        size_hint: None, None
        size: root.size

        MDLabel:
            id: label
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            text: root.label_text
            halign: 'right'
            pos_hint: {'x': 0.05, 'center_y': 0.46}
            adaptive_size: True

        MDLabel:
            id: date
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Light.ttf"
            text: root.date_text
            font_size: 15
            halign: 'right'
            pos_hint: {'x': 0.05, 'center_y': 0.20}
            adaptive_size: True

        MDLabel:
            id: money
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Medium.ttf"
            text: root.money_text
            color: get_color_from_hex("#8AC6D1")
            halign: 'center'
            pos_hint: {'center_x': 0.82, 'center_y': 0.35}
            adaptive_size: True

<TopSearchBar>:
    elevation: 5
    ripple_behavior: True
    padding: 16
    size_hint: None, None
    size: "360dp", "60dp"
    md_bg_color: get_color_from_hex("#f4dedc")

    MDTextField:
        id: txtf
        font_name: "App/views/assets/Fonts/Inter/static/Inter-Regular.ttf"
        size_hint: .9, None
        pos_hint: {"center_x": .5, "center_y": .2}
        font_size: 18
        icon_right: "magnify"
        icon_right_color: [1,1,1,1]
        line_color_normal: get_color_from_hex("#f4dedc")
        line_color_focus: 1, 1, 1, 1
        on_text_validate:
            app.remove_widgets()
