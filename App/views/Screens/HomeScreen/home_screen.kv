#:import get_color_from_hex kivy.utils.get_color_from_hex

<HomeScreen>


    MDFloatLayout:

        md_bg_color: get_color_from_hex("#EDEFF0")

        Image:
            source: "App/views/assets/images/avatar profile.png"
            pos_hint: {'center_x': 0.20, 'center_y':0.9}
        Image:
            source: "App/views/assets/images/Menu.png"
            size: root.size
            size_hint: 1,1
            keep_ratio: False
            pos_hint: {'center_x': 0.5, 'center_y':0.75}

        MDLabel:
            text: "Welcome back,"
            font_size: 14
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Regular.ttf"
            pos_hint: {'center_x': 0.85, 'center_y':0.92}
        MDLabel:
            text: "User"
            font_size: 22
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            pos_hint: {'center_x': 0.85, 'center_y':0.89}

        MDLabel:
            text: "Total"
            font_size: 13
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Medium.ttf"
            color: 1, 1, 1
            halign: "center"
            pos_hint: {'center_y':0.80}

        MDLabel:
            id: cur_total
            text: root.controller.get_all_money()
            font_size: 30
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            color: 1, 1, 1
            halign: "center"
            pos_hint: {'center_y':0.74}

        MDRaisedButton:
            text: "NEW BUDGET"
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            font_size: 11
            md_bg_color: get_color_from_hex("#8AC6D1")
            pos_hint: {'center_x': .8, 'center_y': .03}
            on_release: root.show_alert_dialog()

        MDLabel:
            text: 'YOUR BUDGET :'
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            font_size: 14
            pos_hint: {'center_x': .55, 'center_y': .03}
        MDLabel:
            id: cur_budget
            text: '0'
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Medium.ttf"
            font_size: 14
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': .03}

    GridLayout:
        id: home_layout
        spacing: 4
        cols: 1
        padding: 10
        size_hint_y: .4
        pos_hint: {'center_y':.362}
        height: self.minimum_height
        row_default_height: 40
        orientation: 'bt-lr'

<HomeCard>:
    id: home_card
    elevation: 4
    MDFloatLayout:
        MDLabel:
            id: root.label_id
            text: root.label_text
            font_size: 15
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            pos_hint: {'center_x': 0.6, 'center_y':0.53}
        MDLabel:
            id: money_text
            #text: root.controller.get_money_by_type("network")
            text: root.money_text
            halign: "right"
            font_size: 15
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Medium.ttf"
            pos_hint: {'center_x': 0.36, 'center_y':0.53}
        MDLabel:
            text: 'â‚½'
            font_size: 13
            color: get_color_from_hex("#3474B9")
            pos_hint: {'center_x': 1.37, 'center_y':0.525}

<Content>
    id: content
    orientation: 'vertical'
    size_hint_y: None
    height: "60dp"

    MDTextField:
        id: new_budget

<YourBudget>:
    elevation: 0
    padding: 16
    size_hint: None, None
    size: "360dp", "70dp"
    pos_hint: {'center_x': .5, 'center_y': .12}

    MDRelativeLayout:
        halign: 'center'
        size: root.size

        MDLabel:
            text: root.msg
            font_size: 14
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Medium.ttf"

        MDLabel:
            id: balance
            text: root.balc
            font_size: 14
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Light.ttf"
            halign: 'center'
            pos_hint: {'center_x': .8}

