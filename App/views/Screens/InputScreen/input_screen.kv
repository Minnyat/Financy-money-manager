#:import SweetAlert kivymd_extensions.sweetalert.SweetAlert
#:import HistoryScreen App.views.Screens.HistoryScreen.history_screen.HistoryScreen

<InputScreen>:

    MDLabel:
        text: "TRANSACTION TYPE: " + app.cur_choice
        font_size: 13
        font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
        pos_hint: {'center_x': 0.65, 'center_y': 0.9}

    MDIconButton:
        icon: "access-point"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.19, 'center_y': 0.81}
        on_press:
            app.cur_choice = "network"
    MDIconButton:
        icon: "hospital-building"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.4, 'center_y': 0.81}
        on_press:
            app.cur_choice = "health"
    MDIconButton:
        icon: "briefcase-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.61, 'center_y': 0.81}
        on_press:
            app.cur_choice = "work"
    MDIconButton:
        icon: "train-car"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.82, 'center_y': 0.81}
        on_press:
            app.cur_choice = "transportation"
    MDIconButton:
        icon: "home-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.19, 'center_y': 0.67}
        on_press:
            app.cur_choice = "house"
    MDIconButton:
        icon: "shopping-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.4, 'center_y': 0.67}
        on_press:
            app.cur_choice = "shopping"
    MDIconButton:
        icon: "paw-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.61, 'center_y': 0.67}
        on_press:
            app.cur_choice = "pet"
    MDIconButton:
        icon: "food-turkey"
        theme_text_color: "Custom"
        pos_hint: {'center_x': 0.82, 'center_y': 0.67}
        on_press:
            app.cur_choice = "food"

    SaveButton:
        on_release:
            app.add_amount(app.cur_amount)

<SaveButton>:

<InputField>:

    MDFloatLayout:

        MDLabel:
            id: input_txt
            text: root.txt
            font_size: 27
            color: get_color_from_hex('#FFFFFF')
            font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y':0.55}




