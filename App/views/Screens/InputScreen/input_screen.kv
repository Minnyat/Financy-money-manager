#:import SweetAlert kivymd_extensions.sweetalert.SweetAlert

<InputScreen>:

    MDLabel:
        text: "TRANSACTION TYPE: " + app.cur_choice
        font_size: 13
        font_name: "App/views/assets/Fonts/Inter/static/Inter-Bold.ttf"
        pos_hint: {'center_x': 0.65, 'center_y': 0.92}

    MDIconButton:
        icon: "access-point"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.19, 'center_y': 0.81}
        on_press:
            app.cur_choice = "network"
    MDIconButton:
        icon: "hospital-building"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.4, 'center_y': 0.81}
        on_press:
            app.cur_choice = "health"
    MDIconButton:
        icon: "briefcase-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.61, 'center_y': 0.81}
        on_press:
            app.cur_choice = "work"
    MDIconButton:
        icon: "train-car"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.82, 'center_y': 0.81}
        on_press:
            app.cur_choice = "transportation"
    MDIconButton:
        icon: "home-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.19, 'center_y': 0.67}
        on_press:
            app.cur_choice = "house"
    MDIconButton:
        icon: "shopping-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.4, 'center_y': 0.67}
        on_press:
            app.cur_choice = "shopping"
            
    MDIconButton:
        icon: "paw-outline"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.61, 'center_y': 0.67}
        on_press:
            app.cur_choice = "pet"
            
    MDIconButton:
        icon: "food-turkey"
        theme_text_color: "Custom"
        #text_color: get_color_from_hex("#3474B9")
        pos_hint: {'center_x': 0.82, 'center_y': 0.67}
        on_press:
            app.cur_choice = "food"
            


    Image:
        source: "App/views/assets/images/Sum bar.png"
        pos_hint: {"center_y": .52}

    MDIconButton:
        id: Save
        pos_hint: {"center_x": .9, "center_y": .952}
        icon: "check-circle"
        user_font_size: "30sp"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#3474B9")
        on_release:
            app.add_amount(Amount.text)

    MDTextField:
        id: Amount
        font_name: "App/views/assets/Fonts/Inter/static/Inter-Regular.ttf"
        size_hint: .9, None
        pos_hint: {"center_x": .5, "center_y": .51}
        font_size: 18
        icon_right: "currency-rub"
        icon_right_color: [1,1,1,1]
        line_color_normal: get_color_from_hex("#3474B9")
        line_color_focus: 1, 1, 1, 1

