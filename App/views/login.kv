<Login>:
    MDScreen:
        name: "login"
        MDFloatLayout:
            Image:
                source: "assets/white_bg.png"
                size_hint: None, None
                size: root.size
                pos_hint: {"center_x": .5, "center_y": .5}
            Image:
                source: "assets/bg login page.png"
                size_hint: None, None
                size: root.size
                allow_stretch: True
                keep_ratio: False
                pos_hint: {"center_x": .5, "center_y": .5}
            Image:
                source: "assets/UserCircle.png"
                size_hint: .50, .50
                pos_hint: {"center_x": .5, "center_y": .750}
            MDLabel:
                id: MainLabel
                text: app.main_label[0]
                font_size: "15sp"
                font_name: "assets/Fonts/verdanab.ttf"
                halign: 'center'
                pos_hint: {"center_y": .850}
                color: 1, 1, 1


            MDTextField:
                id: Username
                pos_hint: {"center_x": .5, "center_y": .6}
                size_hint: .8, None
                line_color_focus: 1, 1, 1, 1
                hint_text: app.user_hint_text[0]
                icon_right: "account"
            MDTextField:
                id: Password
                font_name: "assets/Fonts/verdanab.ttf"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: .8, None
                line_color_focus: 1, 1, 1, 1
                hint_text: app.pass_hint_text[0]
                icon_right: "key"
                password: True
                password_mask: "●"


            MDIconButton:
                id: lang_button
                pos_hint: {"center_x": .90, "center_y": .945}
                icon: "assets/ru_language.png"
                user_font_size: "3sp"
                on_release:
                    root.Switch_Language()
            MDFillRoundFlatButton:
                id: Login_Button
                pos_hint: {"center_x": .5, "center_y": .4}
                text: app.login_button[0]
                font_name: "assets/Fonts/verdanab.ttf"
                line_color: 1, 1, 1, 1
                text_color: 157/255, 196/255, 212/255, 1
                md_bg_color: 1, 1, 1, 1
                on_press: app.get_data(Username.text, Password.text)
            MDIconButton:
                id: sign_in
                pos_hint: {"center_x": .93, "center_y": .045}
                icon: "plus"
                user_font_size: "35sp"
                text_color: 157/255, 196/255, 212/255, 1
                on_release:
                    root.manager.current = "register"


<Register>:
    MDScreen:
        name: "register"
        MDFloatLayout:
            Image:
                source: "assets/bg_register.png"
                size_hint: None, None
                size: root.size
                pos_hint: {"center_x": .5, "center_y": .5}

            MDIconButton:
                icon: "arrow-left"
                text_color: 157/255, 196/255, 212/255, 1
                user_font_size: "30sp"
                pos_hint: {"center_y": .95}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "login"


            MDTextField:
                id: regi_first_name
                pos_hint: {"center_x": .5, "center_y": .65}
                size_hint: .8, None
                line_color_focus: 157/255, 196/255, 212/255, 1
                hint_text: "First name*"
            MDTextField:
                id: regi_last_name
                pos_hint: {"center_x": .5, "center_y": .59}
                size_hint: .8, None
                line_color_focus: 157/255, 196/255, 212/255, 1
                hint_text: "Last name*"
            MDTextField:
                id: regi_username
                pos_hint: {"center_x": .5, "center_y": .53}
                size_hint: .8, None
                line_color_focus: 157/255, 196/255, 212/255, 1
                hint_text: app.user_hint_text[0] + "*"
            MDTextField:
                id: regi_password
                font_name: "assets/Fonts/verdanab.ttf"
                pos_hint: {"center_x": .5, "center_y": .47}
                size_hint: .8, None
                line_color_focus: 157/255, 196/255, 212/255, 1
                hint_text: app.pass_hint_text[0] + "*"
                password: True
                password_mask: "●"


            MDRaisedButton
                id: create_acc
                text: "Create an account"
                md_bg_color: 157/255, 196/255, 212/255, 1
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": .499, "center_y": .40}

            MDCheckbox:
                size_hint: None, None
                size: "48dp", "48dp"
                pos_hint: {"center_x": .25, "center_y": .3}
            MDLabel:
                text: "Agree with Term & Condition"
                text_color: 0, 0, 0, 1
                halign: "center"
                font_size: "12sp"
                pos_hint: {"center_y": .3}





